@model TransportadoraMVC.ActividadReference.ActividadDTO

@{
    ViewBag.Title = "Details";
}

<h2>Detalles de Actividad</h2>

<div>
    <h4>Actividad</h4>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="fuente">Asunto</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Asunto)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Creada Por</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.CreadaPor)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Fecha Vencimiento</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.FechaVencimiento)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Estado</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Estado)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Prioridad</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Prioridad)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Sucursal</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.RelacionadaCon)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Correo</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.AsignadaA)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Observación</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Observacion)
                <hr />
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btnGuardar", type = "button" })|
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btnGenerico", type = "button" })
</p>
