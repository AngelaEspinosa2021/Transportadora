@model IEnumerable<TransportadoraMVC.ActividadReference.Actividad>

@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/actividades.js"></script>
<h2>Lista Actividades</h2>

<p>
    @Html.ActionLink("Crear Actividad", "Create", null, new { @class = "btnGenerico", type = "button" })
</p>

<div id="datosActividades">
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Detalle Actividad</h4>
        <div id="datosdetalleActividad">
        </div>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cerrar</a>
    </div>
</div>

<!-- Modal Structure -->
<div id="modal2" class="modal">
    <div class="modal-content">
        <h4>Eliminar Actividad</h4>
        <h5 class="fuenteTitulo">¿Está seguro que desea eliminar este elemento?</h5>
    </div>    
    <div class="modal-footer">
        <form class="col s12">
            <div class="row">
                <div id="datoseliminarActividad">
                </div>
            </div>
        </form>
    </div>
</div>

