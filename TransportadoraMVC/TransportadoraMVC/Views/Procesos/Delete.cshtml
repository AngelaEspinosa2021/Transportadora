@model TransportadoraMVC.ProcesoReference.Proceso

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Proceso</h2>

<h3>¿Está seguro que desea eliminar este elemento?</h3>
<div>
    <h4>Proceso</h4>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="fuente">Sucursal</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Sucursal)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Nombre</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Nombre)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Estado</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Estado)
                <hr />
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btnGenerico" /> |
            @Html.ActionLink("Regresar", "Index", null, new { @class = "regresar" })
        </div>
    }
</div>
