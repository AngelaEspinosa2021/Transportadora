@model IEnumerable<TransportadoraMVC.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Datos Cuenta</h2>

<p>
    @Html.ActionLink("Crear Usuario", "Create", null,  new { @class = "btnGenerico", type = "button" })
</p>
<table class="highlight">
    <tr>
        <th class="fuente">
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th class="fuente">
            @Html.DisplayNameFor(model => model.Contraseña)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="fuente">
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        <td class="fuente">
            @Html.DisplayFor(modelItem => item.Contraseña)
        </td>
        <td>
            @*@Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btnGenerico", type = "button" })*@
            @Html.ActionLink("Cambiar Contraseña", "Edit", new { id = item.Id }, new { @class = "btnContrasena", type = "button" })
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btnContrasena", type = "button" })
            @*@Html.ActionLink("Eliminar", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
