@model TransportadoraMVC.UsuarioReference.Usuario

@{
    ViewBag.Title = "Edit";
}

<h2>Cambiar Contraseña</h2>

<div class="form-horizontal">
    <div class="row">
        <div class="col s6 input-field fuente">
            <input id="Id" name="Id" value="@Model.Id" type="text" readonly>
            <label for="Id">Id del Usuario</label>
        </div>
        <div class="col s6 input-field fuente">
            <input id="ContraseñaActual" name="ContraseñaActual" type="password">
            <label for="ContraseñaActual">Contraseña Actual</label>
        </div>
    </div>
    <div class="row">
        <div class="col s6 input-field fuente">
            <input id="NuevaContraseña" name="NuevaContraseña" type="password">
            <label for="NuevaContraseña">Nueva Contraseña</label>
        </div>
    </div>
    <div class="form-group fuente fuente">
        <div class="col-md-offset-2 col-md-10">
            <input type="button" value="Guardar" class="btnGuardar" onclick="CambiarPassword()" />
        </div>
    </div>

</div>

<div>
    @Html.ActionLink("Regresar", "Index", null, new { @class = "regresar" })
</div>

