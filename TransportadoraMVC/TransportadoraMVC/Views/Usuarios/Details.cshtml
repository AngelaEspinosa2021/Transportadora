@model TransportadoraMVC.UsuarioReference.Usuario

@{
    ViewBag.Title = "Details";
}

<h2>Detalle de Usuario</h2>

<div>
    <h4>Usuario</h4>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="fuente">Nombre</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Correo)
                <hr />
            </div>
        </div>

        <div class="form-group">
            <div class="fuente">Contraseña</div>
            <div class="col-md-10 fuenteTitulo">
                @Html.DisplayFor(model => model.Contraseña)
                <hr />
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btnGenerico", type = "button" })|
    @Html.ActionLink("Regresar", "Index", null, new { @class = "btnGenerico", type = "button" })
</p>
